{{location-comparison-widget model=model}}
<div class="container main">
  <form {{action 'updateZip' model on="submit"}} class="form-inline text-center">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="zipcode">Zip Code</label>
          {{input value=model.first_location.current_observation.display_location.zip class="form-control"}}
          <button type="submit" class="btn btn-default">Update</button>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="zipcode">Zip Code</label>
          {{input value=model.second_location.current_observation.display_location.zip class="form-control"}}
          <button type="submit" class="btn btn-default">Update</button>
        </div>
      </div>
    </div>
  </form>
</div>
<nav class="footer navbar-fixed-bottom">
  <div class="container text-center">
    <small>Powered by</small>
    <img src='http://icons.wxug.com/graphics/wu2/logo_130x80.png'>
  </div>
</nav>
